@model IEnumerable<ASP_NET_MVC_Q3.ViewModels.ListViewModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
</head>
<body>
    <h2>List</h2>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>ProductName</th>
                <th>Locale</th>
                <th>CreateDate</th>
                <th>UpdateDate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.LocaleFullName</td>
                    <td>@item.CreateDate.ToString("yyyy-MM-dd hh:mm:ss")</td>
                    <td>@string.Format("{0:yyyy/MM/dd HH:mm:ss}", item.UpdateDate)</td>
                    <td>@Html.ActionLink("Edit", "Edit", new { id = item.Id })|@Html.ActionLink("Delete", "Delete", new { id = item.Id })</td>
                </tr>
            }
        </tbody>
    </table>
</body>
<div>
    <button type="button" onclick="location.href='@Url.Action("Create", "Product")'">Create</button>
</div>
</html>
